@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <form method="post">
        <div class="mb-3">
            <label for="inputLastName" class="form-label">Фамилия</label>
            <input name="inputLastName" class="form-control" id="inputLastName" />
        </div>
        <div class="mb-3">
            <label for="inputFirstName" class="form-label">Имя</label>
            <input name="inputFirstName" class="form-control" id="inputFirstName" />
        </div>
        <div class="mb-3">
            <label for="inputMiddleName" class="form-label">Отчество</label>
            <input name="inputMiddleName" class="form-control" id="inputMiddleName" />
        </div>
        <div class="mb-3">
            <label for="inputBirthDay" class="form-label">Дата рождения</label>
            <input name="inputBirthDay" class="form-control" id="inputBirthDay" />
        </div>
        <input value="Сохранить" type="submit" class="btn btn-primary" />
    </form>
</div>